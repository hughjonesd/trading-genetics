\begin_layout Standard
Next up
\begin_inset Formula 
\begin{align*}
 & E(B^{2}|A=a)\\
= & E[k^{2}G^{2}+(1-k)^{2}S^{2}-2k(1-k)GS|A=a]\\
= & k^{2}E[G^{2}|A=a)+(1-k)^{2}E[S^{2}|A=a]-2k(1-k)E[GS|A=a]
\end{align*}

\end_inset

and here
\begin_inset Formula 
\begin{align*}
E[G^{2}|A=a] & =\frac{\int g^{2}\gamma(g)\sigma(a/k-(1-k)g/k)dg}{\int\gamma(g)\sigma(a/k-(1-k)g/k)dg};\\
E[S^{2}|A=a] & =\frac{\int s^{2}\gamma(a/(1-k)-ks/(1-k))\sigma(s)ds}{\int\gamma(a/(1-k)-ks/(1-k))\sigma(s)ds};
\end{align*}

\end_inset


\end_layout

